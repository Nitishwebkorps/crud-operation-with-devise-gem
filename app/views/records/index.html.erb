<h1 style="text-align:center;color:white;background-color:red">Student Record</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Father Name</th>
      <th scope="col">Address</th>
      <th scope="col">City</th>
      <th scope="col">state</th>
      <th scope="col">Phone Number</th>
      <th scope="col">Tenth </th>
      <th scope="col">Twelve</th>
      <th scope="col">Action</th>
      
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.name %></td>
        <td><%= record.fathername %></td>
        <td><%= record.address %></td>
        <td><%= record.city %></td>
        <td><%= record.state %></td>
        <td><%= record.phoneno %></td>
        <td><%= record.tenth %></td>
        <td><%= record.twelve %></td>
        
        <td><%= link_to 'More info>>', record_path(record) %></td>
      </tr>
    <% end %>
  </tbody>
</table>









      
     
<h1 style="text-align:center;color:white;background-color:red;mt-3">All Registered user</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Serial Number</th>
      <th scope="col">Email</th>
      <th scope="col">Created At</th>
      <th scope="col">Updated At</th>
      <th scope="col">Role Of User</th>
      <th scope="col">Action </th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <th scope="row"><%= user.id %></th>
      <td><%= user.email %></td>
      <td><%= user.created_at %></td>
      <td><%= user.updated_at %></td>
      <td><span class="badge bg-success"> <%= user.roles.pluck(:name) %> </span></td>
      <td><%= link_to "Edit Role", edit_user_path(user), class: "btn btn-warning" %></td>
    </tr>
    <% end %>
    
  </tbody>
</table>